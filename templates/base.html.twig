<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">

		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
																																																           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href="https://bootswatch.com/5/lumen/bootstrap.min.css">
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<div class="collapse navbar-collapse" id="navbarColor03">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link active" href="/">Actualités du jour
								<span class="visually-hidden">(current)</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="/signup">Inscription</a>
						</li>
						<li class="nav-item">
							{% if app.user %}
								<a class="nav-link" href="/logout">Deconnexion</a>
							{% else %}
								<a class="nav-link" href="/login">Se connecter</a>
							{% endif %}
						</li>
					</li>
					<li class="nav-item">
						{% if app.user %}
							<a class="nav-link" href="/admin">Administration</a>
						{% endif %}
					</li>
					{% if app.user %}
						<li
							class="nav-item">
							<!-- Possibilité de mettre page profil par la suite -->
							<a class="nav-link" href='#'>Connecté en tant que
								{{ app.user.username }}
							</p>
						</li>
					{% endif %}

				</div>
			</div>
		</nav>
		{% block body %}{% endblock %}
	</body>
</html></body></html>
